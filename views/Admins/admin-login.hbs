    <section class="vh-100 d-flex justify-content-center align-items-center">
        <div class="container-fluid h-custom " style="margin-left: 90px;">
          <div class="row d-flex justify-content-center align-items-center h-100">
            <div class="col-md-9 col-lg-6 col-xl-5">
              <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-login-form/draw2.webp"
                class="img-fluid" alt="Sample image">
            </div>
            <div class="col-md-8 col-lg-6 col-xl-4  offset-xl-1">
              <form action="/admin" method="post">
               <h4 class="text-center mb-3" style="font-family:Verdana, Geneva, Tahoma, sans-serif;">Admin Login</h4>

      
                <!-- Email input -->
                <div class="form-outline mb-4">
                  <input type="text" id="form3Example3" name="username" required class="form-control form-control-lg fs-6"
                    placeholder="Eg:George" onchange="checkError()"/>
                  <label class="form-label" for="form3Example3">Username</label>
                </div>
      
                <!-- Password input -->
                <div class="form-outline mb-3">
                  <input type="password" name="password" required class="form-control form-control-lg fs-6"
                    placeholder="************" onchange="checkError()" />
                  <label class="form-label" for="form3Example4">Password</label>
                </div>
      
             <div  style="display:inline;" id="alreadyExist" class="form-text text-danger">{{error}}</div>
                <div class="text-center text-lg-start mt-4 pt-2">
                  <button type="submit" class="btn btn-primary "
                    style="padding-left: 2.5rem; padding-right: 2.5rem;">Login</button>
                  <p class="small fw-bold mt-2 pt-1 mb-0">Don't have an account? <a href="/admin/signup"
                      class="link-danger">Register</a></p>
                </div>
      
              </form>
            </div>
          </div>
        </div>
      
         
      

      </section>
     <script>
      function checkError(){
        document.getElementById('alreadyExist').style.display = 'none';

      }
    </script>


