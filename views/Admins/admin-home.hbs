<nav class="navbar navbar-light bg-light">
  <span class="navbar-brand mb-0 h1">{{name}}</span>
  <a href="/admin/signout" class="btn btn-primary me-auto">Signout </a>
  <a href="/admin/create-user" class="btn btn-primary me-auto">Create a user </a>
</nav>
<table class="table" id="user-table">
  <thead>
    <tr>
      <th scope="col">#</th>
      <th scope="col">Username</th>
      <th scope="col">Gmail</th>
      <th>Options</th>
    </tr>
  </thead>
  <tbody>
    {{#each users}}
    <tr>
      <th scope="row">{{ @index}}</th>
      <td>{{this._id}}</td>
      <td>{{this.email}}</td>
      <td>
        <a href="/admin/edit-user/{{this._id}}" class="btn btn-info">Edit</a>
        <a href="/admin/delete-user/{{this._id}}" class="btn btn-danger">Delete</a>
      </td>
      
    </tr>
    {{/each}}
  
  </tbody>
</table>
<script>
    $(function(){
        $('#user-table').DataTable()
    })
</script>